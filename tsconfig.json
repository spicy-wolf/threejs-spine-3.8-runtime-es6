{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES6",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"outDir": "build/",
		"sourceMap": true,
		"declaration": true,
		"skipLibCheck": true,
		"baseUrl": "."
	},
	"include": [
		"index.ts",
		"core/src/**/*",
		"threejs/src/**/*"
	],
	"exclude": [
		"build/**/*",
		"node_modules/**/*"
	],
}